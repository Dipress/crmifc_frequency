= simple_form_for(resource, as: resource_name, url: user_session_path, html: {class: 'form-signin'}) do |f|
  %h2.form-signin-heading Авторизация
  = f.input :email, input_html: { type: "text" }, required: false, autofocus: true, label: false, class: 'form-control', 'placeholder': 'Login'
  = f.input :password, required: false, label: false, class: 'form-control', 'placeholder': 'Password'
  - if devise_mapping.rememberable?
    %span
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  = f.button :submit, "Войти", class: 'btn btn-lg btn-primary btn-block'
